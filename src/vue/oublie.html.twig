{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
<div class="jeu-container">
  <div class="jeu-form-box">
    <h1>Mot de passe oublié</h1>

    {% if form.message is defined %}
      <p style="color: {{ form.valide ? 'limegreen' : 'red' }};">
        {{ form.message }}
      </p>
    {% endif %}

    <form method="post" action="index.php?page=oublie">
      <div class="jeu-form-group">
        <label for="email">Adresse e-mail :</label>
        <input type="email" name="email" id="email" placeholder="Votre email" required>
      </div>

      <button type="submit" name="btOublie" class="jeu-submit-btn">Envoyer le lien</button>
    </form>
  </div>
</div>
{% endblock %}
