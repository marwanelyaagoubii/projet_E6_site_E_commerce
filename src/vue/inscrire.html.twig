{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}

{% if form.valide is defined %}
    {% if form.valide == true %}
        <h1>Inscription réussie</h1>
        <h1>Voici votre identifiant : {{ form.email }}</h1>
        {% if form.role == 1 %}
            <h1>Vous êtes administrateur du site</h1>
        {% else %}
            <h1>Vous êtes un client du site</h1>
        {% endif %}
    {% else %}
        <h1>Echec de l'inscription</h1>
        <h1>Erreur : {{ form.message }}</h1>
        <h1><a href="index.php?page=inscrire">Retourner sur la page d'inscription</a></h1>
    {% endif %}
{% else %}
<form action="index.php?page=inscrire" method="post" enctype="application/x-www-form-urlencoded">
    <h1>Inscrivez-vous sur GameVerse</h1>
    
    <div class="container-inscription">
        <div class="register-box">
            <h1>GameVerse</h1>
            <div class="form-group">
                <input type="text" id="inputNom" name="inputNom" placeholder="Nom" value="{{ form.nom ?? '' }}" required>
            </div>
            <div class="form-group">
                <input type="text" id="inputPrenom" name="inputPrenom" placeholder="Prénom" value="{{ form.prenom ?? '' }}" required>
            </div>
            <div class="form-group">
                <input type="email" id="inputEmail" name="inputEmail" placeholder="Email" value="{{ form.email ?? '' }}" required>
            </div>
            <div class="form-group">
                <input type="password" id="inputPassword" name="inputPassword" placeholder="Mot de passe" required>
            </div>
            <div class="form-group">
                <input type="password" id="inputPassword2" name="inputPassword2" placeholder="Confirmation mot de passe" required>
            </div>
            <button type="submit" class="register-btn" name="btInscrire">S'inscrire</button>
        </div>
    </div>
</form>
{% endif %}

{% endblock %}
